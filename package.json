{
  "name": "life",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "description": "LIFE",
  "main": "electron-main.js",
  "scripts": {
    "dev": "vite",
    "build": "npx vite build",
    "preview": "vite preview --port 4173",
    "lint": "echo 'No linter configured'",
    "typecheck": "echo 'Pure JS project â€” no TypeScript'",
    "electron:start": "npm run build && electron .",
    "electron:build": "vite build && electron-builder"
  },
  "dependencies": {
    "cannon-es": "^0.20.0",
    "three": "^0.160.0"
  },
  "devDependencies": {
    "electron": "^33.0.0",
    "electron-builder": "^25.0.0",
    "terser": "^5.27.0",
    "vite": "^5.0.12"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "build": {
    "appId": "com.mcompany.life",
    "productName": "LIFE",
    "directories": {
      "output": "dist_app"
    },
    "files": [
      "dist/**/*",
      "electron-main.js"
    ],
    "mac": {
      "target": [
        "dmg"
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "deb",
        "rpm"
      ],
      "maintainer": "Mathias <mathias.tss2012@gmail.com>"
    }
  },
  "author": {
    "name": "Mathias",
    "email": "mathias.tss2012@gmail.com"
  }
}
